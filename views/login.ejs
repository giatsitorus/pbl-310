<!DOCTYPE html>
<html lang="en">
<%- include('components/head') %>
<body class="align-items-center">

    <!-- Login Form -->
    <main class="container d-flex justify-content-center mb-5">
      <div class="login-container">
        <div class="login-header text-center mb-4">
          <h2>üîê Login ke Hole Vision</h2>
          <p class="text-muted small">Masukkan email dan password Anda untuk masuk.</p>
        </div>
        <form action="/api/login" method="post">
    <div class="mb-3">
      <label for="password" class="form-label">Email</label>
      <input
        type="email"
        name="username"
        id="email"
        class="form-control <%= email_error && email_error.length > 0 ? 'is-invalid' : '' %>"
        placeholder="email@example.com"
        value="<%= email %>"
        required
      />
      <% if (email_error && email_error.length > 0) { %>
        <div class="invalid-feedback">
          <%= email_error[0] %>
        </div>
      <% } %>
    </div>
    <div class="mb-3">
      <label for="password" class="form-label">Password</label>
      <input
        type="password"
        name="password"
        id="password"
        class="form-control <%= error && error.length > 0 ? 'is-invalid' : '' %>"
        placeholder="********"
        required
      />
      <% if (error && error.length > 0) { %>
        <div class="invalid-feedback">
          <%= error[0] %>
        </div>
      <% } %>
    </div>
    <div class="d-grid gap-2">
      <button type="submit" class="btn btn-primary">Login</button>
      <a href="/register" class="btn btn-outline-secondary">Daftar</a>
    </div>
    <div class="text-center mt-3">
      <a href="/forgetpassword" class="text-decoration-none small">Lupa password?</a>
    </div>
  </form>
  
      </div>
    </main>
  
    <!-- Footer -->
    <footer class="text-center text-muted py-4 bg-white w-100 shadow-sm">
      &copy; 2025 Hole Vision. All rights reserved.
    </footer>
  
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="assets/main.js"></script>
  </body>
  </html>